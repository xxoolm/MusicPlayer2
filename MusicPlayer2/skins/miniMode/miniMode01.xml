<root xmlns="https://github.com/zhongyang219/MusicPlayer2/skin" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="https://github.com/zhongyang219/MusicPlayer2/skin ../skin.xsd">  
  <ui width="334" height="54">
    <horizontalLayout margin="4">
      <albumCover width="46" margin-right="4"/>
      <stackElement hover_to_switch="true" margin-left="4" margin-right="4">
        <verticalLayout>
          <text type="artist_title" style="scroll" font_size="10" height="24"/>
          <lyrics no_background="true" use_default_font="true" font_size="10" margin-top="-2" margin-bottom="-2"/>
        </verticalLayout>
        <horizontalLayout>
          <button key="previous" width="34" height="34" bigIcon="true"/>
          <button key="playPause" width="34" height="34" bigIcon="true"/>
          <button key="next" width="34" height="34" bigIcon="true"/>
          <button key="repeatMode" width="24" height="24"/>
          <text type="play_time_and_volume" style="scroll" alignment="center"/>
          <button key="showPlaylist" width="24" height="24"/>
        </horizontalLayout>
      </stackElement>
      <button key="favorite" width="24" height="24"/>
      <button key="miniMode" width="24" height="24"/>
    </horizontalLayout>
    <progressBar margin-bottom="0" height="2"/>
  </ui>
</root>
