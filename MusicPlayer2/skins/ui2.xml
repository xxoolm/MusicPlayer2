<root xmlns="https://github.com/zhongyang219/MusicPlayer2/skin" xmlns:xsi="http://www.w3.org/2101/XMLSchema-instance" xsi:schemaLocation="https://github.com/zhongyang219/MusicPlayer2/skin ./skin.xsd"
      index="2">

  <ui type="big">
    <verticalLayout>
      <trackInfo height="20" margin="4" margin-bottom="0"/>
      <text type="format" style="scroll" height="20" margin-left="4" margin-right="4"/>
      <stackElement margin-left="4" margin-right="4" margin-bottom="8" show_indicator="true" indicator_offset="-8">
        <!--第1页-->
        <horizontalLayout>
          <verticalLayout>
            <albumCover square="true" height="70%" margin="8"/>
            <text type="title" alignment="center" style="scroll" height="26" font_size="10" />
            <text type="artist" alignment="center" style="scroll" height="20" font_size="9" margin-top="0" />
            <placeHolder/>
            <spectrum draw_reflex="true" fixed_width="true" alignment="center" height="15%" margin-bottom="4" min-height="24" max-height="80"/>
          </verticalLayout>
          <lyrics margin="4" margin-left="8" margin-bottom="16"/>
        </horizontalLayout>
        <!--第2页-->
        <horizontalLayout>
          <verticalLayout margin-bottom="12">
            <albumCover square="true" margin="8"/>
            <text type="title" alignment="center" style="scroll" height="26" font_size="10" />
            <text type="artist" alignment="center" style="scroll" height="20" font_size="9" margin-top="0" />
            <lyrics hide-height="200" height="15%" margin-top="4"/>
            <spectrum draw_reflex="true" fixed_width="true" alignment="center" height="15%" margin-top="-8" margin-bottom="-12" min-height="24" max-height="80"/>
          </verticalLayout>
          <verticalLayout margin="4" margin-left="8" margin-bottom="16">
            <playlistIndicator height="30" margin-bottom="4"/>
            <searchBox height="26" margin-bottom="4"/>
            <playlist item_height="32"/>
          </verticalLayout>
        </horizontalLayout>
        <!--第3页-->
        <horizontalLayout>
          <verticalLayout margin="8" margin-bottom="12">
            <rectangle height="80">
              <horizontalLayout margin="4">
                <albumCover square="true" width="64" margin-left="4"/>
                <verticalLayout margin-left="16">
                  <text type="title" font_size="10" style="scroll" height="28"/>
                  <text type="artist" font_size="9" style="scroll" height="24"/>
                </verticalLayout>
              </horizontalLayout>
            </rectangle>
            <lyrics margin-top="14" hide-height="120"/>
            <spectrum draw_reflex="true" fixed_width="true" alignment="center" height="15%" min-height="24" max-height="80"/>
          </verticalLayout>
          <verticalLayout margin="4" margin-left="8" margin-bottom="16">
            <playlistIndicator height="30" margin-bottom="4"/>
            <searchBox height="26" margin-bottom="4"/>
            <playlist item_height="32"/>
          </verticalLayout>
        </horizontalLayout>
      </stackElement>
      <rectangle height="24" margin="4" margin-bottom="0">
        <toolbar show_translate_btn="true"/>
      </rectangle>
      <classicalControlBar margin="4"/>
    </verticalLayout>
  </ui>

  <ui type="narrow">
    <verticalLayout>
      <placeHolder show_when_use_system_titlebar="true" height="20"/>
      <verticalLayout margin="12">
        <trackInfo height="20"/>
        <text type="format" style="scroll" height="20"/>
        <stackElement click_to_switch="false" show_indicator="true" margin-bottom="4">
          <verticalLayout margin-bottom="4">
            <albumCover square="true" margin="8"/>
            <text type="title" alignment="center" style="scroll" height="26" font_size="10" />
            <text type="artist" alignment="center" style="scroll" height="20" font_size="9" margin-top="0" />
            <lyrics hide-height="200" height="18%" margin-top="4"/>
          </verticalLayout>
          <verticalLayout margin="8">
            <rectangle height="80">
              <horizontalLayout margin="4">
                <albumCover square="true" width="64" margin-left="4"/>
                <verticalLayout margin-left="16">
                  <text type="title" font_size="10" style="scroll" height="28"/>
                  <text type="artist" font_size="9" style="scroll" height="24"/>
                </verticalLayout>
              </horizontalLayout>
            </rectangle>
            <lyrics margin-top="14" hide-height="120"/>
          </verticalLayout>
          <playlist margin="8"/>
        </stackElement>
        <spectrum draw_reflex="true" fixed_width="true" alignment="center" height="15%" margin-top="-6" margin-bottom="-12" min-height="24" max-height="80"/>
      </verticalLayout>
      <rectangle height="24" margin="4" margin-bottom="0">
        <toolbar show_translate_btn="true"/>
      </rectangle>
      <classicalControlBar margin="4"/>
    </verticalLayout>
  </ui>

  <ui type="small">
    <verticalLayout margin="4">
      <placeHolder show_when_use_system_titlebar="true" height="28"/>
      <trackInfo height="20" hide-height="180" />
      <horizontalLayout margin="4">
        <rectangle max-height="80">
          <horizontalLayout margin="6">
            <albumCover square="true" width="64" margin-left="4">
              <spectrum draw_reflex="false" fixed_width="true" alignment="center" height="50%" margin-bottom="0"/>
            </albumCover>
            <verticalLayout margin-left="16">
              <text type="title" font_size="10" style="scroll" height="28"/>
              <text type="artist" font_size="9" style="scroll" height="24"/>
              <text type="format" font_size="8" style="scroll" height="22" hide-height="68"/>
            </verticalLayout>
          </horizontalLayout>
        </rectangle>

        <!--<albumCover square="true" margin-right="4" width="120">
            <spectrum draw_reflex="false" fixed_width="true" alignment="center" height="50%" margin-bottom="0"/>
          </albumCover>
          <verticalLayout>
            <trackInfo height="20"/>
            <text type="format" height="20"/>
            <text type="title" alignment="center" height="26" font_size="10" />
            <text type="artist_album" alignment="center" height="20" font_size="9" margin-top="0" />
            <lyrics height="20" />
          </verticalLayout>-->
      </horizontalLayout>
      <rectangle height="24" margin="4" margin-bottom="0">
        <toolbar show_translate_btn="true"/>
      </rectangle>
      <classicalControlBar margin-top="4"/>
    </verticalLayout>

  </ui>

</root>